<%= form_for @post do |f| %> <!-- change from ":post, url: posts_path " to @post -->
	 	<div id="errors">
	 	<% if @post.errors.any? %>
	 		<h2><%= pluralize(@post.errors.count, 'error')  %> prevented from saving this post.</h2>
	 		<ul>
	 			<% @post.errors.full_messages do |msg| %>
	 				<li><%= msg %></li>
	 			<% end %>
	 		</ul>
	 		<% end %>
	 	</div>
	 <p>	
	  <%= f.label :title %><br />
	  <%= f.text_field :title %>
	 </p>
	 <p>
	  <%= f.label :body %><br />
	  <%= f.text_area :body %>
	 </p>
	 <p>
	  <%= f.submit %>
	 </p>
	<% end %>